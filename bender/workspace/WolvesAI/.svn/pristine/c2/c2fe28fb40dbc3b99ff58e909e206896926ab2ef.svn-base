#ifndef CONFIGCHANGELISTENER_H_
#define CONFIGCHANGELISTENER_H_

/**
 * A listener for config changes
 */
class ConfigChangeListener {
public:

	/**
	 * Destructor
	 */
	virtual ~ConfigChangeListener() {}

	/**
	 * If config has changed and the listener was registered, this function is called.
	 */
	virtual void configChanged() = 0;
};

#endif /* CONFIGCHANGELISTENER_H_ */
